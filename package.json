{
  "name": "portfolio",
  "author": "Archil Karchava <hello@archil.dev>",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"next dev\" \"pnpm types:generate --watch\"",
    "build": "next build",
    "export": "pnpm build && next export",
    "start": "next start",
    "types:check": "tsc --pretty --noEmit",
    "types:generate": "cross-env DOTENV_CONFIG_PATH='./.env.local' graphql-codegen --require dotenv/config",
    "format": "prettier --write .",
    "lint": "next lint",
    "test": "jest",
    "test-all": "pnpm lint && pnpm types:check && pnpm test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "clsx": "^1.2.1",
    "graphql": "^16.6.0",
    "next": "12.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@graphql-codegen/cli": "^2.12.0",
    "@graphql-codegen/schema-ast": "^2.5.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@prefresh/babel-plugin": "^0.4.3",
    "@svgr/webpack": "^6.3.1",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^16.11.56",
    "@types/react": "^18.0.18",
    "autoprefixer": "^10.4.8",
    "babel-jest": "^29.0.2",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "eslint-config-next": "^12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^29.0.2",
    "jest-environment-jsdom": "^29.0.2",
    "jest-watch-typeahead": "^2.1.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "tslib": "^2.4.0",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0"
  },
  "peerDependencies": {
    "ts-node": "^10.9.1"
  }
}
