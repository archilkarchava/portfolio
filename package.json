{
  "name": "portfolio",
  "author": "Archil Karchava <hello@archil.dev>",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"next dev\" \"npm run types:generate --watch\"",
    "prebuild": "is-ci || npm run types:generate",
    "build": "next build",
    "preexport": "npm run build",
    "export": "next export",
    "start": "next start",
    "types:check": "tsc --pretty --noEmit",
    "types:generate": "cross-env DOTENV_CONFIG_PATH='./.env.local' graphql-codegen --require dotenv/config",
    "format": "prettier --write .",
    "lint": "next lint",
    "test": "jest",
    "test-all": "npm run lint && npm run types:check && npm run test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(js|jsx|ts|tsx)": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.4.7",
    "clsx": "^1.1.1",
    "graphql": "^15.5.1",
    "next": "^11.1.0",
    "next-plugin-preact": "^3.0.6",
    "preact": "^10.5.14",
    "preact-render-to-string": "^5.1.19",
    "react": "npm:@preact/compat@^17.0.2",
    "react-dom": "npm:@preact/compat@^17.0.2",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.2.0",
    "webpack": "^5.50.0",
    "xss": "^1.0.9"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.0.1",
    "@graphql-codegen/schema-ast": "^2.0.0",
    "@graphql-codegen/typescript": "^2.0.0",
    "@graphql-codegen/typescript-operations": "^2.0.1",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/react": "npm:@testing-library/preact@^2.0.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.18",
    "autoprefixer": "^10.3.1",
    "babel-jest": "^27.0.6",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "jest": "^27.0.6",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.5"
  }
}
