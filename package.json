{
  "name": "portfolio",
  "author": "Archil Karchava <hello@archil.dev>",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"next dev\" \"yarn run types:generate --watch\"",
    "prebuild": "is-ci || yarn run types:generate",
    "build": "next build",
    "preexport": "yarn run build",
    "export": "next export",
    "start": "next start",
    "types:check": "tsc --pretty --noEmit",
    "types:generate": "cross-env DOTENV_CONFIG_PATH='./.env.local' graphql-codegen --require dotenv/config",
    "format": "prettier --write .",
    "lint": "eslint --fix . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn run lint && yarn run types:check && yarn run test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "clsx": "^1.1.1",
    "graphql": "^15.5.0",
    "next": "^10.2.3",
    "next-plugin-preact": "^3.0.6",
    "preact": "^10.5.13",
    "preact-render-to-string": "^5.1.19",
    "react": "npm:@preact/compat@^0.0.3",
    "react-dom": "npm:@preact/compat@^0.0.3",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.1.2",
    "webpack": "^5.38.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/schema-ast": "^1.18.3",
    "@graphql-codegen/typescript": "^1.22.1",
    "@graphql-codegen/typescript-operations": "^1.18.0",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/react": "npm:@testing-library/preact",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "autoprefixer": "^10.2.6",
    "babel-jest": "^27.0.1",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "jest": "^27.0.1",
    "jest-watch-typeahead": "^0.6.3",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "^2.3.0",
    "tailwindcss": "^2.1.2",
    "typescript": "^4.3.2"
  }
}
