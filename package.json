{
  "name": "portfolio",
  "author": "Archil Karchava <hello@archil.dev>",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"next dev\" \"yarn run types:generate --watch\"",
    "prebuild": "is-ci || yarn run types:generate",
    "build": "next build",
    "preexport": "yarn run build",
    "export": "next export",
    "start": "next start",
    "types:check": "tsc --pretty --noEmit",
    "types:generate": "cross-env DOTENV_CONFIG_PATH='./.env.local' graphql-codegen --require dotenv/config",
    "format": "prettier --write .",
    "lint": "eslint --fix . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn run lint && yarn run types:check && yarn run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run types:check"
    }
  },
  "lint-staged": {
    "*.@(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.3.7",
    "clsx": "^1.1.1",
    "graphql": "^15.4.0",
    "next": "^10.0.5",
    "preact": "^10.5.11",
    "preact-render-to-string": "^5.1.12",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-ssr-prepass": "npm:preact-ssr-prepass"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/schema-ast": "^1.18.1",
    "@graphql-codegen/typescript": "^1.20.0",
    "@graphql-codegen/typescript-operations": "^1.17.13",
    "@prefresh/next": "^1.4.4",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/react": "npm:@testing-library/preact",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "autoprefixer": "^10.2.3",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.8",
    "is-ci": "^2.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.2",
    "typescript": "^4.1.3"
  }
}
