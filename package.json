{
  "name": "portfolio",
  "author": "Archil Karchava <hello@archil.dev>",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"next dev\" \"pnpm types:generate --watch\"",
    "build": "next build",
    "export": "pnpm build && next export",
    "start": "next start",
    "types:check": "tsc --pretty --noEmit",
    "types:generate": "cross-env DOTENV_CONFIG_PATH='./.env.local' graphql-codegen --require dotenv/config",
    "format": "prettier --write .",
    "lint": "next lint",
    "test": "jest",
    "test-all": "pnpm lint && pnpm types:check && pnpm test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.5.9",
    "clsx": "^1.1.1",
    "graphql": "^16.3.0",
    "next": "^12.1.0",
    "next-plugin-preact": "^3.0.6",
    "preact": "^10.6.6",
    "preact-render-to-string": "^5.1.19",
    "react": "npm:@preact/compat@^17.0.3",
    "react-dom": "npm:@preact/compat@^17.0.3",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.2.0",
    "xss": "^1.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/schema-ast": "^2.4.1",
    "@graphql-codegen/typescript": "^2.4.5",
    "@graphql-codegen/typescript-operations": "^2.3.2",
    "@prefresh/babel-plugin": "^0.4.0",
    "@prefresh/webpack": "^3.3.2",
    "@svgr/webpack": "^6.2.1",
    "@testing-library/react": "npm:@testing-library/preact@^2.0.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.25",
    "@types/react": "^17.0.39",
    "autoprefixer": "^10.4.2",
    "babel-jest": "^27.5.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.3.4",
    "postcss": "^8.4.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1"
  }
}
