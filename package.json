{
  "name": "portfolio",
  "author": "Archil Karchava <hello@archil.dev>",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"next dev\" \"pnpm types:generate --watch\"",
    "build": "next build",
    "export": "pnpm build && next export",
    "start": "next start",
    "types:check": "tsc --pretty --noEmit",
    "types:generate": "cross-env DOTENV_CONFIG_PATH='./.env.local' graphql-codegen --require dotenv/config",
    "format": "prettier --write .",
    "lint": "next lint",
    "test": "jest",
    "test-all": "pnpm lint && pnpm types:check && pnpm test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "clsx": "^1.2.1",
    "graphql": "^16.5.0",
    "next": "12.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xss": "^1.0.13",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@graphql-codegen/cli": "^2.8.0",
    "@graphql-codegen/schema-ast": "^2.5.0",
    "@graphql-codegen/typescript": "^2.7.1",
    "@graphql-codegen/typescript-operations": "^2.5.1",
    "@prefresh/babel-plugin": "^0.4.3",
    "@svgr/webpack": "^6.2.1",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/react": "^17.0.47",
    "autoprefixer": "^10.4.7",
    "babel-jest": "^28.1.2",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.19.0",
    "eslint-config-next": "^12.2.1",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "jest-watch-typeahead": "^1.1.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.5",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0"
  }
}
